@{ 
    ViewData["Title"] = "事件";
}

@(Html.DevExtreme()
       .DataGrid<QServiceDog.Models.EventInfo>().Columns(columns =>
       {
           columns.AddFor(m => m.Time).Caption("时间").DataType( GridColumnDataType.DateTime).Format("yyyy-MM-dd HH:mm:ss").Width(180);
           columns.AddFor(m => m.Type).Caption("类别").Width(140);
           columns.AddFor(m => m.Id).Hide();
           columns.AddFor(m => m.Msg).Caption("内容").MinWidth(400);

       }).StartDataGrid(nameof(QServiceDog.Models.EventInfo),false)
)
