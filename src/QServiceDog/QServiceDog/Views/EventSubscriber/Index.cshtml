@{
    ViewData["Title"] = "事件订阅者";
}

@(Html.DevExtreme()
       .DataGrid<QServiceDog.Models.EventSubscriber>().Columns(columns =>
       {
           columns.AddFor(m => m.Id).Hide();
           columns.AddFor(m => m.Name).Caption("姓名") ;
           columns.AddFor(m => m.EMail).Caption("邮箱") ;
           columns.AddFor(m => m.Phone).Caption("手机号") ;
           columns.AddFor(m => m.WXName).Caption("企业微信名称") ;
           columns.AddFor(m => m.IsEnable).Caption("是否启用") .TrueText("是").FalseText("否").ShowEditorAlways(false);

       }).StartDataGrid(nameof(QServiceDog.Models.EventSubscriber),"Id",true)
)
<script>
    $(function () {
        setInterval(function () {
            reQuery($("#gridContainer"));
        }, 120000);
    });
</script>