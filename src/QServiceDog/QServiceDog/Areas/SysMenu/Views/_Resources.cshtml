@using Microsoft.AspNetCore.Hosting
@using System.IO
@inject MenuMeta meta
@inject IWebHostEnvironment hosting
@functions {

    bool ContentExists(string url)
    {
        return File.Exists(url.Replace("~", hosting.ContentRootPath + "/wwwroot"));
    }
    bool IsDebug()
    {
#if DEBUG
    return true;
#else
        return false;
#endif
    }
}
